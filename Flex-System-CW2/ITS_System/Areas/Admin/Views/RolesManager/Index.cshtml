@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


@{
    ViewData["Title"] = "Roles Manager Page";
}

    <div class="text-center">
        <h1 class="display-4">Roles Manager</h1>  

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger mx-2">@ViewBag.Message</div>
        }
    <!--This allwos the user to create a role with this form-->
    <form method="post" asp-action="AddRole" asp-controller="RolesManager">
        <div class="input-group">
            <input name="roleName" class="form-control w-25" />
            <span class="input-group-btn">
                <button type="submit" class="btn-info btn">Add New Role</button>
            </span>
        </div>
    </form>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            <!--Shows each role that is saved to the database-->
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <!--Calls the deleterole fucntion in the Rolesmanagercontroller for deletion of a role-->
                        <a class="btn btn-danger" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>


</div>





